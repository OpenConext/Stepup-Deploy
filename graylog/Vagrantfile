# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "puphpet/debian75-x64"

  config.vm.provider "virtualbox" do |v|
    v.memory = 1024
  end

  config.vm.provision :puppet do |puppet|
    puppet.manifest_file = "graylog2.pp"
    puppet.manifests_path = "../provisioning/graylog/manifests"
    puppet.module_path = "../provisioning/graylog/modules"
  end

  if which('ansible-playbook')
    config.vm.provision "ansible" do |ansible|
      ansible.playbook = "../provisioning/ansible/graylog.yml"
      ansible.inventory_path = "../provisioning/ansible/inventories/development"
      ansible.limit = "all"
    end
  else
      config.vm.provision :shell, inline: "env PLAYBOOK=../provisioning/ansible/graylog.yml ../provisioning/ansible/windows.sh"
  end

  # Change from forwarded ports to private network
  config.vm.network :private_network, ip: "10.0.0.101"

  config.vm.network :forwarded_port, guest: 9000, host: 9000
  config.vm.network :forwarded_port, guest: 80, host: 8080
  config.vm.network :forwarded_port, guest: 12201, host: 12201, protocol: 'udp', auto_correct: true
  config.vm.network :forwarded_port, guest: 12201, host: 12201, protocol: 'tcp', auto_correct: true
  config.vm.network :forwarded_port, guest: 12900, host: 12900

end

# Check to determine whether we're on a windows or linux/os-x host,
# later on we use this to launch ansible in the supported way
# source: https://stackoverflow.com/questions/2108727/which-in-ruby-checking-if-program-exists-in-path-from-ruby
def which(cmd)
    exts = ENV['PATHEXT'] ? ENV['PATHEXT'].split(';') : ['']
    ENV['PATH'].split(File::PATH_SEPARATOR).each do |path|
        exts.each { |ext|
            exe = File.join(path, "#{cmd}#{ext}")
            return exe if File.executable? exe
        }
    end
    return nil
end
