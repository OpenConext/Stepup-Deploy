    management_password: {{ management_password | vault }}

    graylog_hostname: {{ graylog_hostname }}

    self_service_email_verification_url_template: https://selfservice.{{ app_domain }}/verify-email?n={nonce}
    email_sender_name: SURFnet bv
    email_sender_email: {{ noreply_email }}