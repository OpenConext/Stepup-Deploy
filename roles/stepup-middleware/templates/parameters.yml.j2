    database_deploy_password:  {{ mariadb_root_password | vault }}


    mailer_transport:  smtp
    mailer_host:       127.0.0.1
    mailer_user:       ~
    mailer_password:   ~

    default_locale:    nl_NL
    locales:           [nl_NL]
