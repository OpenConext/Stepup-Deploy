parameters:
    database_driver:   pdo_mysql
    database_host:     localhost
    database_port:     3306
    database_middleware_name:     {{ database_middleware_name }}
    database_middleware_user:     {{ database_middleware_user }}
    database_middleware_password: {{ database_middleware_password | vault}}
    database_gateway_name:     {{ database_gateway_name }}
    database_gateway_user:     {{ database_middleware_user }}
    database_gateway_password: {{ database_middleware_password | vault}}
    # TODO: Deploy creds should only be available during deploy
    # TODO: Use a specific deploy user, not root
    #database_deploy_user:      {{ database_deploy_user }}
    #database_deploy_password:  {{ database_deploy_password | vault }}
